<!DOCTYPE html>
<html>
  <head>
    <title>TeamSquare</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div>
      <% if flash[:notice].present? %>
        <p class="alert alert-primary"><%= flash[:notice].capitalize %></p> 
      <% end %>
    </div>
    <% if user_signed_in? %>
		  <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "btn btn-info button-align" %>
    <% end %>
    <div>
    <%= yield %>
  </body>
</html>
