<div class="row">
	<div class="col-md-12">
		<div class="container" style="margin-top: 20px">
			<% projects.each do |project| %>
			 	<% if project.todos.where(developer_id: current_user._id).count > 0 %>
				 	<fieldset class="border p-2">
						<legend class="w-auto text-primary"><%= "#{project.name} Todos " %></legend>
				 		<table class="table table-hover">
							<thead></thead>
								<tr>
									<td>Todo Name </td>
									<td>Todo Status</td>
									<td>change Status</td>
								</td>
							</thead>
							<tbody>
								<% project.todos.where(developer_id: current_user._id).each do |todo| %>
									<tr>
										<td><%= todo.task_name  %></td>
										<td><%= todo.status.humanize %></td>
										<td><%= link_to 'Edit', edit_project_todo_path(project, todo), method: :get, class: 'btn btn-primary btn-sm' %></td>
									</tr>
								<% end %>
							</tbody>
						</TABLE>
					</fieldset>
				<% else %>
					<div class="row">
						<div class="col-md-12">
							<div class="card" style="margin: 40px">
								<div class="card-header">
									<div class="card-title"> No Todos yet for <%= project.name %></div>
								</div>
							</div>
						</div>
					</div>
				<% end %>
				</br>
			<% end %>
		</div>
	</div>
</div>
